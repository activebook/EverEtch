{
  "name": "everetch",
  "version": "1.0.0",
  "type": "module",
  "description": "A slim word memo application",
  "main": "lib/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "tsc && npm run build-css && npm run copy-html && electron .",
    "build": "tsc && npm run build-css && npm run copy-html",
    "watch": "tsc --watch",
    "build-css": "tailwindcss -i ./src/renderer/styles.css -o ./lib/renderer/styles.css",
    "dev-css": "tailwindcss -i ./src/renderer/styles.css -o ./lib/renderer/styles.css --watch",
    "copy-html": "mkdir -p lib/renderer && cp src/renderer/index.html lib/renderer/ && sed -i '' 's|../../lib/renderer/|./|g' lib/renderer/index.html",
    "migrate-data": "node migrate-data.js",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux",
    "dist:all": "npm run build && electron-builder --win --mac --linux"
  },
  "keywords": [
    "electron",
    "word-memo",
    "sqlite"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.9",
    "@types/node": "^20.19.13",
    "@types/showdown": "^2.0.6",
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "marked": "^16.2.1",
    "openai": "^4.20.0",
    "sqlite3": "^5.1.6",
    "tailwindcss": "^3.4.0",
    "undici": "^7.15.0"
  },
  "build": {
    "asar": true,
    "asarUnpack": [],
    "appId": "com.everetch.app",
    "productName": "EverEtch",
    "directories": {
      "output": "dist",
      "buildResources": "assets/icons"
    },
    "files": [
      "assets/**/*",
      "lib/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets"
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "win": {
      "icon": "icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "icon": "icon_512x512.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    }
  }
}
