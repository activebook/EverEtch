{
  "name": "everetch",
  "version": "1.0.0",
  "type": "module",
  "description": "A slim word memo application",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "tsc && npm run build-css && electron .",
    "build": "tsc && npm run build-css",
    "watch": "tsc --watch",
    "build-css": "tailwindcss -i ./src/renderer/styles.css -o ./dist/renderer/styles.css",
    "dev-css": "tailwindcss -i ./src/renderer/styles.css -o ./dist/renderer/styles.css --watch",
    "migrate-data": "node migrate-data.js"
  },
  "keywords": [
    "electron",
    "word-memo",
    "sqlite"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.9",
    "@types/node": "^20.19.13",
    "@types/showdown": "^2.0.6",
    "electron": "^28.0.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "marked": "^16.2.1",
    "openai": "^4.20.0",
    "showdown": "^2.1.0",
    "sqlite3": "^5.1.6",
    "tailwindcss": "^3.4.0"
  }
}
