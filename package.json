{
  "name": "everetch",
  "version": "1.5.8",
  "type": "module",
  "description": "A slim word memo application",
  "main": "lib/main.js",
  "atom-updater": "v1.0.1",
  "scripts": {
    "start": "electron .",
    "dev": "npm run build && electron .",
    "build": "tsc && npm run build-css && npm run copy-html && npm run copy-templates && npm run inject-version && npm run encrypt-credentials",
    "watch": "tsc --watch",
    "build-css": "postcss ./src/renderer/styles.css -o ./lib/renderer/styles.css",
    "dev-css": "postcss ./src/renderer/styles.css -o ./lib/renderer/styles.css --watch",
    "copy-html": "mkdir -p lib/renderer && cp src/renderer/index.html lib/renderer/ && sed -i '' 's|../../lib/renderer/|./|g' lib/renderer/index.html",
    "copy-templates": "mkdir -p lib/renderer && cp -r src/renderer/templates lib/renderer/",
    "inject-version": "node inject-version.ts",
    "encrypt-credentials": "node encrypt.ts",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac --x64",
    "dist:linux": "npm run build && electron-builder --linux",
    "dist:all": "npm run build && electron-builder --win --mac --linux"
  },
  "keywords": [
    "electron",
    "word-memo",
    "sqlite"
  ],
  "author": "",
  "license": "GPL-3.0-only",
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@tailwindcss/postcss": "^4.1.13",
    "@types/better-sqlite3": "^7.6.9",
    "@types/node": "^20.19.13",
    "@types/showdown": "^2.0.6",
    "electron": "^37.4.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.35.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@google/genai": "^1.19.0",
    "better-sqlite3": "^12.4.1",
    "electron-store": "^10.1.0",
    "googleapis": "^159.0.0",
    "marked": "^16.2.1",
    "openai": "^5.20.0",
    "sqlite-vec": "^0.1.7-alpha.2",
    "sqlite3": "^5.1.6",
    "undici": "^7.15.0"
  },
  "arch": [
    "x64"
  ],
  "build": {
    "asar": true,
    "asarUnpack": [
      "node_modules/sqlite-vec/**/*"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets"
      }
    ],
    "appId": "com.activebook.everetch",
    "productName": "EverEtch",
    "directories": {
      "output": "dist",
      "buildResources": "assets/icons"
    },
    "files": [
      "assets/**/*",
      "lib/**/*",
      "node_modules/**/*",
      "package.json",
      "credentials.enc"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "icon.icns",
      "target": [
        {
          "target": "dir",
          "arch": [
            "x64"
          ]
        }
      ],
      "extendInfo": {
        "CFBundleURLTypes": [
          {
            "CFBundleURLName": "EverEtch Protocol",
            "CFBundleURLSchemes": [
              "everetch"
            ]
          }
        ]
      }
    },
    "win": {
      "icon": "icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "requestedExecutionLevel": "asInvoker"
    },
    "linux": {
      "icon": "icon_512x512.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    }
  }
}
