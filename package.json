{
  "name": "everetch",
  "version": "1.0.0",
  "type": "module",
  "description": "A slim word memo application",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "tsc && npm run build-css && electron .",
    "build": "tsc && npm run build-css",
    "watch": "tsc --watch",
    "build-css": "tailwindcss -i ./src/renderer/styles.css -o ./dist/renderer/styles.css",
    "dev-css": "tailwindcss -i ./src/renderer/styles.css -o ./dist/renderer/styles.css --watch",
    "migrate-data": "node migrate-data.js",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux",
    "dist:all": "npm run build && electron-builder --win --mac --linux"
  },
  "keywords": [
    "electron",
    "word-memo",
    "sqlite"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.9",
    "@types/node": "^20.19.13",
    "@types/showdown": "^2.0.6",
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "marked": "^16.2.1",
    "openai": "^4.20.0",
    "sqlite3": "^5.1.6",
    "tailwindcss": "^3.4.0"
  },
  "build": {
    "appId": "com.everetch.app",
    "productName": "EverEtch",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "src/assets/icons/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "icon": "src/assets/icons/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "icon": "src/assets/icons/icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    }
  }
}
